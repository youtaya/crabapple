<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:orientation="vertical" 
        android:background="@drawable/bg_corner_5dp_white_alpha" 
        android:layout_width="fill_parent" 
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="25.0dip" 
        android:layout_marginTop="15.0dip" 
        android:layout_marginRight="25.0dip">
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1" >
	
	        <TextView
	            android:id="@+id/press_wall"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:gravity="center"
	            android:text="@string/inti_channel"
	            android:textColor="@color/ivorywhite"
	            android:textSize="18sp" />
	    </LinearLayout>
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:paddingLeft="6dp"
	        android:paddingRight="6dp" >
	
	        <RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" 
	            android:layout_marginBottom="15.0dip" >
	
	            <TextView
	                android:id="@+id/ment_text"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:background="@color/grey"
	                android:layout_marginBottom="5.0dip"
	                android:gravity="center"
	                android:text="热门推荐"
	                android:textColor="@color/white"
	                android:textSize="18dp" />
	
	            <GridView
	                android:id="@+id/ment_content"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_below="@+id/ment_text"
	                android:numColumns="3" >
	            </GridView>
	        </RelativeLayout>
	    </LinearLayout>
	</LinearLayout>	 
	   
    <Button 
        android:textSize="23dp" 
        android:textColor="@color/white" 
        android:gravity="center" 
        android:id="@+id/bt_save_publish" 
        android:background="@drawable/bg_corner_orange" 
        android:layout_width="fill_parent" 
        android:layout_height="42.0dip" 
        android:layout_marginLeft="25.0dip" 
        android:layout_marginTop="24.0dip" 
        android:layout_marginRight="25.0dip"
        android:layout_marginBottom="24.0dip" 
        android:text="@string/save_publish" />
    
</LinearLayout>