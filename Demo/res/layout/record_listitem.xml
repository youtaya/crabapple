<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:paddingLeft="0dp"
    android:paddingRight="0dp" >

	<ImageView
	    android:id="@+id/time_pic"
		android:layout_width="72dip"
        android:layout_height="72dip"
		android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:visibility="gone"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/sadface" />
	
	<LinearLayout 
		android:layout_width="0dp"
		android:layout_height="fill_parent"
		android:layout_weight="1"
		android:layout_marginTop="2dp"
		android:layout_marginBottom="2dp"
		android:layout_marginLeft="16dp"
		android:layout_marginRight="6dp"
		android:orientation="vertical" >	
		<TextView
	        android:id="@+id/title"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:maxLines="1"
	        android:ellipsize="end"
	        android:text="Day One"
	        android:gravity="center|left"
	        android:textStyle="bold|italic"
	        android:textColor="#ff707070"
	        android:textSize="22sp" />
		<TextView
	        android:id="@+id/content"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
			android:layout_weight="1"
	        android:maxLines="2"
	        android:ellipsize="end"
	        android:gravity="center|left"
	        android:textColor="#ff707070"
	        android:textSize="18sp" />		

	</LinearLayout>
	
	<LinearLayout 
		android:layout_width="64dip"
		android:layout_height="wrap_content"
		android:layout_marginTop="2dp"
		android:layout_marginBottom="2dp"
		android:layout_marginRight="12dp"
		android:orientation="vertical" >
		<RelativeLayout 
			android:layout_width="match_parent"
			android:layout_height="match_parent" >
			<TextView
		        android:id="@+id/create_time"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:maxLines="1"
		        android:layout_alignParentRight="true"
		        android:textColor="@color/saddlebrown"
		        android:textSize="11sp" />
			<TextView
		        android:id="@+id/create_date"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/create_time"
		        android:layout_alignParentRight="true"
		        android:textStyle="bold|italic"
		        android:textColor="@color/feise"
		        android:textSize="32sp" />
			<TextView
		        android:id="@+id/create_week"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/create_date"
		        android:maxLines="1"
		        android:layout_alignParentRight="true"
		        android:textColor="@color/chinared"
		        android:textSize="12sp" />
		</RelativeLayout>		
	</LinearLayout>

</LinearLayout>