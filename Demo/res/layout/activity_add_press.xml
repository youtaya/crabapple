<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:paddingLeft="6dp"
        android:paddingRight="6dp">
        <Button
            android:id="@+id/step_some"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" 
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="@string/step_some"/>
        <Button
            android:id="@+id/say_some"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" 
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="@string/say_some"/>        
    </LinearLayout>   
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/press_wall"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="@string/inti_channel"
            android:textColor="@color/ivorywhite"
            android:textSize="18sp" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:orientation="vertical" >

		<RelativeLayout 
			android:layout_width="match_parent"
        	android:layout_height="wrap_content" >
        	<TextView
        	    android:id="@+id/ment_text"
				android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:gravity="center"
        		android:text="热门推荐"
        		android:textColor="@color/white"
        		android:background="@color/grey"
        		android:textSize="18dp"/>
        	<GridView
        	    android:id="@+id/ment_content"
				android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:numColumns="3"
        		android:layout_below="@+id/ment_text">
        	</GridView>
		    
		</RelativeLayout>
    </LinearLayout>
    

</LinearLayout>