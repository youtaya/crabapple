<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="226dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/yellow" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="226dp"
			android:focusable="true"  
			android:focusableInTouchMode="true"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/content_bg"
                android:layout_width="match_parent"
                android:layout_height="226dp"
                android:src="@drawable/bg_feed_quesition"
                android:scaleType="fitXY" />
           
            <EditText
                android:id="@+id/edit_content"
                android:layout_width="match_parent"
                android:layout_height="226dp"
                android:layout_below="@+id/add_media"
                android:layout_centerInParent="true"
                android:layout_marginBottom="54dp"
                android:background="@null"
                android:gravity="center"
                android:hint="留下这段时光" />
        </FrameLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/add_media"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/scrollView1" >

        <ImageView
            android:id="@+id/add_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/toolbar_photo_selector" />

        <ImageView
            android:id="@+id/add_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/toolbar_sound_selector" />
    </RelativeLayout>

</RelativeLayout>